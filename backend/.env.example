# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./bored_tourist.db

# JWT Secret (change this to a random secure string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./apple-auth-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/auth/apple/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:8081

# Email Configuration (for booking confirmations)
# For Gmail:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification
# 3. Go to https://myaccount.google.com/apppasswords
# 4. Create an App Password for "Mail"
# 5. Use that password below (not your regular Gmail password)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Supabase (for authentication)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
