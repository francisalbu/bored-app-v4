            hasAccessToken: !!access_token,
            accessTokenLength: access_token?.length || 0,
            hasRefreshToken: !!refresh_token,
            refreshTokenLength: refresh_token?.length || 0
          });
          
          if (access_token && refresh_token) {
            console.log('ðŸ” Setting session with tokens...');
            
            const { data, error } = await supabase.auth.setSession({
              access_token,
              refresh_token,
            });
            
            if (error) {
              console.error('âŒ Error setting session:', error);
            } else if (data.session) {
              console.log('âœ…âœ…âœ… SESSION ESTABLISHED! âœ…âœ…âœ…');
              console.log('ðŸ“§ User:', data.session.user.email);
              console.log('ï¿½ User ID:', data.session.user.id);
              
              // Close modal and call success callback
