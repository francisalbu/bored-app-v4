        } else {
          console.error('âŒ No session created after code exchange');
          Alert.alert('Authentication Error', 'Failed to create session.');
        }
      } catch (error) {
        console.error('âŒ Error processing callback:', error);
        Alert.alert('Authentication Error', 'An error occurred during sign in.');
      }
          
