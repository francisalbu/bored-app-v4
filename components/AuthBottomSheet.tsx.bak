            console.log('ðŸ’¡ This might mean:');
            console.log('   - OAuth failed');
            console.log('   - Redirect URL mismatch');
            console.log('   - Supabase configuration issue');
          }
        } catch (error) {
          console.error('âŒ Error processing deep link:', error);
        }
      } else {
        console.log('â„¹ï¸ Not an auth callback, ignoring...');
      }
      console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    };
    
    // Add event listener
    console.log('ðŸ‘‚ Setting up deep link listener...');
