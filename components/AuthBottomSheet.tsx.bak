        const params = new URLSearchParams(url.search);
        const code = params.get('code');
        
        console.log('ðŸ” Authorization code:', code ? `${code.substring(0, 15)}...` : 'NOT FOUND');
        
        if (!code) {
          console.error('âŒ No authorization code in callback URL!');
          Alert.alert('Authentication Error', 'No authorization code received.');
          return;
